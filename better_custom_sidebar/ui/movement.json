[
  {
    "id": "move_mode_template",
    "type": "widget",
    "style": "clause",
    "default_clause": { "text": "bugging out", "sym": "-", "color": "dark_gray" },
    "clauses": [
      { "id": "run", "text": "run", "sym": "R", "color": "red", "condition": { "u_has_move_mode": "run" } },
      { "id": "walk", "text": "walk", "sym": "W", "color": "white", "condition": { "u_has_move_mode": "walk" } },
      {
        "id": "crouch",
        "text": "crouch",
        "sym": "C",
        "color": "light_blue",
        "condition": { "u_has_move_mode": "crouch" }
      },
      { "id": "prone", "text": "prone", "sym": "P", "color": "green", "condition": { "u_has_move_mode": "prone" } }
    ]
  },
  {
    "id": "move_mode_desc",
    "type": "widget",
    "label": "Mode",
    "style": "text",
    "copy-from": "move_mode_template",
    "//": "Full move mode name walking/running/crouching/prone"
  },
  {
    "id": "move_num",
    "type": "widget",
    "label": "Move count",
    "var": "move",
    "style": "number"
  }
]
